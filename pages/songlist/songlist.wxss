/* pages/songlist.wxss */
.page{
  padding: 10rpx 20rpx;

}
.title{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #101010;
  text-align: center;
}
.hotpic{
  width: 100%;
  height: 450rpx;
  vertical-align: bottom;
}
.topTime{
  text-align: right;
  font-size: 24rpx;
margin-top: 20rpx;
}
.update{
  color: #f66;
  display: inline-block;
  margin-left: 20rpx;
}
.list{
  padding: 15rpx 30rpx;
  padding-right: 60rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ddd;
  align-items: center;
}
.square{
  width: 70rpx;
  font-size: 20rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 70rpx;
  background: #eee;
  
}
.current{
  position: fixed;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #101010;
  top: 0;
  width: 100%;
}
.stop{
  background: #eee;
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  text-align: center;
  font-size: 20rpx;
  color: #f66;
  line-height: 70rpx;
  margin-left: 40rpx;

}